<h1>Listing adventures</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Level</th>
    <th>Description</th>
    <th>Tiles</th>
    <th>Expanding description</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @adventures.each do |adventure| %>
  <tr>
    <td><%= adventure.name %></td>
    <td><%= adventure.level %></td>
    <td><%= adventure.description %></td>
    <td><%= adventure.tiles %></td>
    <td><%= adventure.expanding_description %></td>
    <td><%= link_to 'Show', adventure %></td>
    <td><%= link_to 'Edit', edit_adventure_path(adventure) %></td>
    <td><%= link_to 'Destroy', adventure, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>


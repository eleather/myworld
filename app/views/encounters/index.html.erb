<h1>Listing encounters</h1>

<table>
  <tr>
    <th>Adventure</th>
    <th>Name</th>
    <th>Level</th>
    <th>Setup</th>
    <th>Tactics</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @encounters.each do |encounter| %>
  <tr>
    <td><%= encounter.adventure_id %></td>
    <td><%= encounter.name %></td>
    <td><%= encounter.level %></td>
    <td><%= encounter.setup %></td>
    <td><%= encounter.tactics %></td>
    <td><%= link_to 'Show', encounter %></td>
    <td><%= link_to 'Edit', edit_encounter_path(encounter) %></td>
    <td><%= link_to 'Destroy', encounter, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

